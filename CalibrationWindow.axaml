<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PetViewerLinux.CalibrationWindow"
        Title="Pet Edge Calibration"
        WindowState="Maximized"
        Background="Black"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Topmost="True">

    <Canvas Name="MainCanvas">
        <!-- Pet image for dragging -->
        <Image Name="PetImage" 
               Width="300" 
               Height="300"
               Stretch="Uniform"/>
        
        <!-- Instruction text -->
        <TextBlock Name="InstructionText"
                   Text="Click and drag the pet to the top edge of your screen, and press Enter when done."
                   FontSize="24"
                   Foreground="White"
                   Canvas.Left="50"
                   Canvas.Top="50"
                   TextWrapping="Wrap"
                   MaxWidth="800"
                   TextAlignment="Center"/>
        
        <!-- Skip calibration button - positioned absolutely -->
        <Button Name="SkipButton"
                Content="Skip Calibration (ESC)"
                Padding="10,5"/>
    </Canvas>
</Window>